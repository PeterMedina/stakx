{
  "name": "stakx-io/stakx",
  "description": "Yet another static website generator powered by Symfony and Twig",
  "license": "LGPL",
  "type": "project",
  "authors": [
    {
      "name": "Vladimir Jimenez",
      "homepage": "https://allejo.io",
      "role": "Project Maintainer"
    }
  ],
  "autoload": {
    "classmap": [
      "src/"
    ],
    "psr-4": {
      "Gregwar\\RST\\HTML\\Nodes\\": "src/Engines/RST/HTML/Nodes/"
    }
  },
  "autoload-dev": {
    "classmap": [
      "tests/Utilities/"
    ]
  },
  "require": {
    "twig/twig": "^1.26",
    "symfony/yaml": "^3.2.3",
    "erusev/parsedown": "^1.6.1",
    "symfony/filesystem": "^3.2.3",
    "symfony/console": "^3.2.3",
    "symfony/finder": "^3.2.3",
    "psr/log": "^1.0.2",
    "scrivo/highlight.php": "^9.0.0",
    "aptoma/twig-markdown": "^2.0.0",
    "allejo/resource-watcher": "dev-master",
    "gregwar/rst": "dev-master",
    "mikey179/vfsStream": "^1.6.4",
    "erusev/parsedown-extra": "^0.7.1"
  },
  "require-dev": {
    "phpunit/phpunit": "4.8.*",
    "phpunit/phpunit-mock-objects": "2.3.*"
  },
  "scripts": {
    "build": [
      "composer install --no-dev",
      "box build",
      "php -r \"file_put_contents('stakx.phar.version', sha1_file('stakx.phar'));\""
    ]
  }
}
