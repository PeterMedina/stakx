{
  "name": "stakx/stakx",
  "description": "Yet another static website generator powered by Symfony and Twig",
  "license": "MIT",
  "type": "project",
  "authors": [
    {
      "name": "Vladimir Jimenez",
      "homepage": "https://allejo.io",
      "role": "Project Maintainer"
    }
  ],
  "autoload": {
    "psr-4": {
      "allejo\\stakx\\": "src/allejo/stakx/",
      "Gregwar\\RST\\": "src/Gregwar/RST/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "allejo\\stakx\\Test\\": "tests/allejo/stakx/Test"
    }
  },
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/stakx-io/file-watcher.git"
    },
    {
      "type": "git",
      "url": "https://github.com/stakx-io/highlight.php.git"
    }
  ],
  "require": {
    "twig/twig": "^1.26",
    "symfony/yaml": "^3.2.3",
    "erusev/parsedown": "^1.6.1",
    "symfony/filesystem": "^3.2.3",
    "symfony/console": "^3.2.3",
    "symfony/finder": "^3.2.3",
    "psr/log": "^1.0.2",
    "aptoma/twig-markdown": "^2.0.0",
    "gregwar/rst": "^1.0.3",
    "mikey179/vfsStream": "^1.6.4",
    "erusev/parsedown-extra": "^0.7.1",
    "stakx/file-watcher": "@dev",
    "stakx/highlight.php": "@dev"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.8.35",
    "phpunit/phpunit-mock-objects": "~2.3.8"
  },
  "bin": ["bin/stakx"],
  "scripts": {
    "build": [
      "composer install --no-dev",
      "box build",
      "php -r \"file_put_contents('stakx.phar.version', sha1_file('stakx.phar'));\""
    ],
    "test": "phpunit"
  }
}
