{
  "name": "stakx-io/stakx",
  "description": "Yet another static website generator powered by Symfony and Twig",
  "license": "LGPL",
  "type": "project",
  "authors": [
    {
      "name": "Vladimir Jimenez",
      "homepage": "https://allejo.io",
      "role": "Project Maintainer"
    }
  ],
  "autoload": {
    "classmap": [
      "src/"
    ],
    "psr-4": {
      "Gregwar\\RST\\HTML\\Nodes\\": "src/Engines/RST/HTML/Nodes/"
    }
  },
  "autoload-dev": {
    "classmap": [
      "tests/Utilities/"
    ]
  },
  "require": {
    "twig/twig": "^1.26.0",
    "symfony/yaml": "3.1.*",
    "erusev/parsedown": "1.6.*",
    "symfony/filesystem": "3.1.*",
    "symfony/console": "3.1.*",
    "symfony/finder": "3.1.*",
    "psr/log": "1.0.*",
    "scrivo/highlight.php": "9.0.*",
    "padraic/phar-updater": "1.0.*",
    "aptoma/twig-markdown": "^2.0",
    "allejo/resource-watcher": "dev-master",
    "gregwar/rst": "dev-master",
    "mikey179/vfsStream": "^1.6"
  },
  "require-dev": {
    "phpunit/phpunit": "4.8.*",
    "phpunit/phpunit-mock-objects": "2.3.*"
  },
  "scripts": {
    "build": [
      "composer install --no-dev",
      "box build",
      "shasum stakx.phar > stakx.phar.version"
    ]
  }
}
