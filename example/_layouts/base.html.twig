{% extends "page.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="assets/css/styles.css">
{% endblock %}

{% block footer %}
    <div class="row">
        <div class="col-md-6">
            {{ parent() }}
        </div>
        <div class="col-md-6">
            <ul class="list-inline text-right">
                {% for item in menu %}
                    <li>
                        <a href="{{ item.url }}">{{ item.name }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}