{% extends "@theme/base.html.twig" %}

{% block body %}
    <div class="container d-flex flex-column flex-grow-1 ">
        <header class="page-header">
            {% block header %}
                <h1>
                    {{ this.title ? this.title : site.title }}

                    {% if this.slug %}
                        <small>{{ this.slug }}</small>
                    {% endif %}
                </h1>
            {% endblock %}
        </header>

        <main>
            {% block content %}{% endblock %}
        </main>
    </div>

    <footer class="bg-dark border-top border-secondary mt-5 p-4 shadow-lg text-light">
        {% block footer %}
            <p class="m-0 text-center">Copyright &copy; {{ "now" | date("Y") }}</p>
        {% endblock %}
    </footer>
    
{% endblock %}