{% block content %}
    <article>
        <div class="row text-center margin-bottom-40">
            <div class="col-md-6">
                <h3>Inspired by a Giant</h3>
                <img src="{{ url('assets/imgs/logo-jekyll.png') }}" alt="Jekyll—simple, blog-aware, sites">
            </div>
            <div class="col-md-6">
                <h3>Built on the Shoulders of Giants</h3>
                <img src="{{ url('assets/imgs/logo-symfony.png') }}" alt="Symfony—high performance PHP framework">
